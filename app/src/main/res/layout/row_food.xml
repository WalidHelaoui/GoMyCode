<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="289dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/NameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="114dp"
        android:layout_marginTop="19dp"
        android:layout_x="101dp"
        android:layout_y="58dp"
        android:text="Name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NameDataTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NameTxt"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/NameTxt"
        android:layout_x="152dp"
        android:layout_y="59dp"
        android:text="Makloub"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/NameTxt"
        android:layout_below="@+id/NameTxt"
        android:layout_marginTop="11dp"
        android:layout_x="101dp"
        android:layout_y="33dp"
        android:text="Place :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PlaceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/NameDataTxt"
        android:layout_alignTop="@+id/textView3"
        android:layout_x="152dp"
        android:layout_y="34dp"
        android:text="Pizza NAcer" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PlaceTxt"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/PlaceTxt"
        android:layout_x="100dp"
        android:layout_y="81dp"
        android:text="City :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_x="151dp"
        android:layout_y="83dp"
        android:text="Rades" />

    <TextView
        android:id="@+id/PriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NameDataTxt"
        android:layout_alignBottom="@+id/NameDataTxt"
        android:layout_toEndOf="@+id/textView7"
        android:layout_x="149dp"
        android:layout_y="104dp"
        android:text="3 dt"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="20dp"
        android:layout_x="103dp"
        android:layout_y="8dp"
        android:text="Type:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="20dp"
        android:layout_x="102dp"
        android:layout_y="105dp"
        android:text="price:"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/typeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignEnd="@+id/NameDataTxt"
        android:layout_x="151dp"
        android:layout_y="9dp"
        android:text="Food"
        android:textAlignment="center" />
</AbsoluteLayout>